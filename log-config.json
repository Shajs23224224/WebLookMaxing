# Archivo de configuración de logs
# Configuración detallada para Winston logger

# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info

# Formato de logs (json, simple, combined)
LOG_FORMAT=json

# Archivo de logs de errores
LOG_ERROR_FILE=logs/error.log

# Archivo de logs combinados
LOG_COMBINED_FILE=logs/combined.log

# Máximo tamaño de archivo de log (en bytes)
LOG_MAX_SIZE=5242880

# Número máximo de archivos de log
LOG_MAX_FILES=5

# Logs de acceso HTTP
LOG_HTTP_ACCESS=true

# Logs de errores HTTP
LOG_HTTP_ERROR=true

# Configuración específica para producción
# En producción, se recomienda LOG_LEVEL=warn o LOG_LEVEL=error
# En desarrollo, se recomienda LOG_LEVEL=debug para más detalles
