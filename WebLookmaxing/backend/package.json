{
  "name": "lookmaxing-backend",
  "version": "1.0.0",
  "description": "Backend API for Lookmaxing e-commerce platform",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration.test.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "load-test": "./load-test.sh",
    "load-test:basic": "./load-test.sh basic",
    "load-test:advanced": "./load-test.sh advanced",
    "load-test:endpoints": "./load-test.sh endpoints",
    "load-test:realistic": "./load-test.sh realistic",
    "load-test:whatsapp": "./load-test.sh whatsapp",
    "monitor": "./monitor.sh",
    "monitor:start": "./monitor.sh start",
    "monitor:stop": "./monitor.sh stop",
    "monitor:status": "./monitor.sh status",
    "test:all": "npm run test && npm run test:integration"
  },
  "keywords": ["ecommerce", "lookmaxing", "nodejs", "express", "typescript"],
  "author": "Lookmaxing Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "firebase-admin": "^12.0.0",
    "mongoose": "^8.0.0",
    "axios": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "paypal-rest-sdk": "^1.8.1",
    "crypto": "^1.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
